<div class="container">
  <h1>Edit task</h1>

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <div>
      <%= f.check_box :completed %>
      <%= f.label :completed %>
    </div>
    <%= f.submit %>
  <% end %>
</div>

<div><%= link_to "Back to list", root_path, class: "btn-back"%></div>